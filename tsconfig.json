{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    // "baseUrl": "./src" // <-- यह लाइन नहीं होनी चाहिए या कमेंट की हुई होनी चाहिए!
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "public", "build"]
}
